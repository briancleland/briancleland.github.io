{
  "width": 400,
  "height": 200,
  "padding": {
    "top": 10,
    "left": 80,
    "bottom": 30,
    "right": 10
  },
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/ropensci/historydata/master/data-raw/sarna.csv",
      "format": {
        "type": "csv",
        "parse": {
          "year": "number",
          "estimate_low": "number"
        }
      }
}
],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "data.year"
      }
},
    {
      "name": "y",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "data.estimate_low"
      }
}
],
  "axes": [
    {
      "type": "x",
      "scale": "x"
    },
    {
      "type": "y",
      "scale": "y"
    }
],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "properties": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "data.year"
          },
          "width": {
            "scale": "x",
            "band": true,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "data.estimate_low"
          },
          "y2": {
            "scale": "y",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
}
]
}